<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seneca.map524.safetyassistant.About">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Safety Assistant"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:gravity="center" />

        </LinearLayout>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Version 1.0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textSize="16dp"
                android:text="Safety Assistant is project by Andy Cooc and Oleksandr Zhurbenko for an assignment in MAP524/DPS924 (Android Programming) class at Seneca College @ York."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:text="The data are gathered from Toronto Police 2016 open data sets." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:text="The purpose of this app is to map out criminal acitivites using data from the Toronto Police which includes assault, auto theft, homicide, robbery, sexual assault, shooing, and theft over $5000 so it would have a visual representation of it on a map. The user can decide which marker to display on the map."></TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
